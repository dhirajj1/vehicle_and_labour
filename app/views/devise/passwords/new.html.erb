

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-6">
      <div class="card bx">
        <div class="card-body">

          <h2 class="mb-4">Forgot your password?</h2>
          <p class="mb-3">Please enter your email address or username and we will email you a link to reset your password.</p>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :email, class: "mb-2" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mb-2' %>
            </div>

            <div class="actions d-grid gap-2">
              <%= f.submit "Send me reset password instructions", class: 'btn btn-primary mb-2 btn-sm' %>
            </div>
          <% end %>

          <div class="text-center">
            <%- if controller_name != 'sessions' %>
              <%= link_to "Log in", new_session_path(resource_name) %>
            <% end %>
            &nbsp;|&nbsp;
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Sign up", new_registration_path(resource_name) %>
            <% end %>
          </div>
        </div>
      </div>    
    </div>
  </div>
</div>    